    <meta charset="UTF-8">
    <title>DataTable Example</title>
    <!-- jQuery and DataTables CSS and JS files -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.css"/>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/v/dt/dt-1.11.3/datatables.min.js"></script>
    <style>
        .dataTables_scrollBody {
            overflow-y: scroll;
        }
    </style>
</head>
<body>
    <table id="example" class="display" style="width:100%">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Gender</th>
                <th>City</th>
                <th>Country</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Salary</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>John Doe</td>
                <td>32</td>
                <td>Male</td>
                <td>New York</td>
                <td>USA</td>
                <td>555-1234</td>
                <td>john.doe@example.com</td>
                <td>$50,000</td>
            </tr>
            <!-- more rows -->
        </tbody>
    </table>
    <script>
        $(document).ready(function() {
            var table = $('#example').DataTable({
                "scrollX": true
            });

            var scrollBody = document.querySelector('.dataTables_scrollBody');
            scrollBody.addEventListener('wheel', function(e) {
                e.preventDefault();
                var scrollDirection = e.deltaY > 0 ? 1 : -1;
                scrollBody.scrollLeft += scrollDirection * 50; // adjust the scroll speed here
            });
        });
    </script>
</body>
